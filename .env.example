# ================================================
# CONFIGURAÇÃO DE AMBIENTE - ENGENHARIAPRO SAAS
# ================================================
# Copie este arquivo para .env.local e preencha com seus valores

# ================================================
# API E URLS
# ================================================
VITE_API_URL=https://seu-api-url.com
VITE_APP_NAME=ENGENHARIAPRO

# ================================================
# BANCO DE DADOS
# ================================================
# PostgreSQL
DATABASE_URL=postgresql://user:password@host:5432/engenhariapro

# ================================================
# GEMINI API (Para IA/Analytics)
# ================================================
GEMINI_API_KEY=sua-chave-gemini-aqui

# ================================================
# AUTENTICAÇÃO
# ================================================
JWT_SECRET=sua-chave-jwt-secreta-aqui
JWT_EXPIRE=7d

# ================================================
# MERCADO PAGO (Opcional)
# ================================================
VITE_MERCADO_PAGO_KEY=sua-chave-mp-aqui

# ================================================
# AMBIENTE
# ================================================
NODE_ENV=production
VERCEL_ENV=production
